mixin addBlockColor(title="Dark Sgade 100%", color="#1F2041", css="dark-100")
  .color-block__body
    div(class=`color-block__color bg-${css}`)
    h2.color-block__title #{title}
      span.color-block__color-name #{color}

.color-block
  each color in colorArr
    +addBlockColor(color.title, color.color, color.css)